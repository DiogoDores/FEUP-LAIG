<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="3" z="1" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="-20" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
    <!-- Rocks -->
    <TEXTURE id="gameBoard">
        <file path="images/boardGame.png" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

</TEXTURES>


<MATERIALS>

    <!-- Board material -->
    <MATERIAL id="boardMaterial">
        <shininess value="100" />
        <specular r="0.38" g="0.2" b="0.09" a="1" />
        <diffuse r="0.38" g="0.2" b="0.09" a="1" />
        <ambient r="0.38" g="0.2" b="0.09" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Square material -->
    <MATERIAL id="squareMaterial">
        <shininess value="100" />
        <specular r="0.05" g="0.11" b="1.0" a="1" />
        <diffuse r="0.05" g="0.11" b="1.0" a="1" />
        <ambient r="0.05" g="0.11" b="1.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>

<ANIMATIONS>
  <ANIMATION id="linear" speed="3" type="linear">
    <controlpoint xx="0" yy="0" zz="-20" />
    <controlpoint xx="-40" yy="0" zz="10" />
    <controlpoint xx="0" yy="0" zz="-20" />
  </ANIMATION>
  <ANIMATION id="linear2" speed="3" type="linear">
    <controlpoint xx="0" yy="0" zz="-20" />
    <controlpoint xx="0" yy="0" zz="0" />
  </ANIMATION>
  <ANIMATION id="circular" speed="3" type="circular"
        centerx="20" centery="5" centerz="20"
        radius="5" startang="0" rotang="360"/>
  <ANIMATION id="circular1" speed="3" type="circular"
        centerx="5" centery="0" centerz="5"
        radius="5" startang="0" rotang="360"/>
  <ANIMATION id="circular2" speed="3" type="circular"
        centerx="-10" centery="0" centerz="0"
        radius="10" startang="0" rotang="360"/>
  <ANIMATION id="combo" type="combo">
    <SPANREF id="linear" />
    <SPANREF id="circular" />
  </ANIMATION>
</ANIMATIONS>

<!-- The nodes -->
  <NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>

          <NODEREF id="board" />
          <NODEREF id="pieces" />

        </DESCENDANTS>

    </NODE>

    <!-- The board -->
    <NODE id="board">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="5" y="0" z="25" />

        <DESCENDANTS>
            <NODEREF id="topFace"/>
            <NODEREF id="bottomFace"/>
            <NODEREF id="sideFace"/>
		</DESCENDANTS>

    </NODE>

    <NODE id="topFace">
        <MATERIAL id="null" />
        <TEXTURE id="gameBoard" />

        <SCALE sx="20" sy="20" sz="20" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 0 1 1" />
        </DESCENDANTS>

    </NODE>


    <NODE id="bottomFace">
        <MATERIAL id="boardMaterial" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="-2.5" z="0" />
