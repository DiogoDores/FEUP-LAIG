<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="600"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.15" sy="0.15" sz="0.15" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>

<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Planet texture -->
    <TEXTURE id="planetTex">
        <file path="images/trunk-image.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>
</TEXTURES>

<MATERIALS>
	<!-- Metal material -->
    <MATERIAL id="metalMaterial">
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
</MATERIALS>

<!-- The leaves -->
<LEAVES>
</LEAVES>

<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="metalMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>

            <NODEREF id="tieFighter" />
            <!--<NODEREF id="x-fighters" />-->
            <NODEREF id="planet" />

        </DESCENDANTS>

    </NODE>

    <!-- Tie Fighter node -->
    <NODE id="tieFighter">
      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>

        <NODEREF id="tieBody" />
      <!--  <NODEREF id="wings" /> -->
        <NODEREF id="connections" />

      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's MAIN BODY node -->
    <NODE id="tieBody">
      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>

        <NODEREF id="mainBody" />
        <NODEREF id="windows" />

      </DESCENDANTS>
    </NODE>

    <!-- Tie fighter's SPHERE node -->
    <NODE id="mainBody">

      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

       <TRANSLATION x="0" y="0" z="0" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="sphere" args="2 20 20" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WINDOWS node -->
    <NODE id="windows">
      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

       <TRANSLATION x="0" y="0" z="-2.25" />
       <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="cylinder" args="4.5 1 1 20 20" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's CONNECTIONS node -->
    <NODE id="connections">
      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>

        <NODEREF id="tieCone1" />
        <NODEREF id="tieCone2" />

      </DESCENDANTS>
    </NODE>

    <!-- LEFT tie fighter CONNECTOR -->
    <NODE id="tieCone1">

      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="-0.5" y="0" z="0" />
      <ROTATION axis="y" angle="-90" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="cylinder" args="3 1 0.1 20 20" />
      </DESCENDANTS>

    </NODE>

    <!-- RIGHT tie fighter CONNECTOR -->
    <NODE id="tieCone2">

      <MATERIAL id="metalMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0.5" y="0" z="0" />
      <ROTATION axis="y" angle="90" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="cylinder" args="3 1 0.1 20 20" />
      </DESCENDANTS>

    </NODE>

    <NODE id="planet">

      <MATERIAL id="null" />
      <TEXTURE id="planetTex" />

      <TRANSLATION x="15" y="10" z="-20" />
      <SCALE sx="4" sy="4" sz="4" />

      <DESCENDANTS>
        <LEAF  type="sphere" args="2 20 20" />
      </DESCENDANTS>

    </NODE>

</NODES>
