<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="600"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.15" sy="0.15" sz="0.15" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>

<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Planet texture -->
    <TEXTURE id="planetTex">
        <file path="images/trunk-image.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>

    <TEXTURE id="black">
        <file path="images/accents.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>

    <TEXTURE id="steel">
        <file path="images/mettalic_black.jpg" />
        <amplif_factor s="1" t="2" />
    </TEXTURE>
</TEXTURES>

<MATERIALS>
	<!-- Metal material -->
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="0.1" g="0.1" b="0.1" a="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="whiteMaterial">
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="0.9" g="0.9" b="0.9" a="1" />
        <ambient r="0.9" g="0.9" b="0.9" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="planetMaterial">
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="0.7" g="0.5" b="0.1" a="1" />
        <ambient r="0.7" g="0.5" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
</MATERIALS>

<!-- The leaves -->
<LEAVES>
</LEAVES>

<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>

            <NODEREF id="tieFighter" />
            <!--<NODEREF id="x-fighters" />-->
            <NODEREF id="planet" />

        </DESCENDANTS>

    </NODE>

    <!-- Tie Fighter node -->
    <NODE id="tieFighter">
      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="5" y="2" z="5" />

      <DESCENDANTS>

        <NODEREF id="tieBody" />
        <NODEREF id="wings" />
        <NODEREF id="connections" />

      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's MAIN BODY node -->
    <NODE id="tieBody">
      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>

        <NODEREF id="mainBody" />
        <NODEREF id="window" />

      </DESCENDANTS>
    </NODE>

    <!-- Tie fighter's SPHERE node -->
    <NODE id="mainBody">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="sphere" args="2 20 20" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WINDOW node -->
    <NODE id="window">
      <MATERIAL id="whiteMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />

      <DESCENDANTS>
        <LEAF  type="cylinder" args="2 1 1 20 20 1 0" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WINGS node -->
    <NODE id="wings">
      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <NODEREF id="wing1" />
        <NODEREF id="wing2" />
        <NODEREF id="accentsCircle1" />
        <NODEREF id="accentsCircle2" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WING 1 node -->
    <NODE id="wing1">
      <MATERIAL id="null" />
      <TEXTURE id="steel" />

      <TRANSLATION x="-3.5" y="0" z="0" />
      <ROTATION axis="y" angle="180" />
      <ROTATION axis="z" angle="90" />

      <DESCENDANTS>
        <NODEREF id="wingTriangle1" />
        <NODEREF id="wingTriangle2" />
        <NODEREF id="wingTriangle3" />
        <NODEREF id="wingTriangle4" />
        <NODEREF id="wingTriangle5" />
        <NODEREF id="wingTriangle6" />
        <NODEREF id="middle" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WING 2 node -->
    <NODE id="wing2">
      <MATERIAL id="null" />
      <TEXTURE id="steel" />

      <TRANSLATION x="3.5" y="0" z="0" />
      <ROTATION axis="z" angle="90" />

      <DESCENDANTS>
        <NODEREF id="wingTriangle1" />
        <NODEREF id="wingTriangle2" />
        <NODEREF id="wingTriangle3" />
        <NODEREF id="wingTriangle4" />
        <NODEREF id="wingTriangle5" />
        <NODEREF id="wingTriangle6" />
        <NODEREF id="middle" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WING CIRCLE node -->
    <NODE id="middle">
      <MATERIAL id="whiteMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0.5" z="0" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF type="cylinder" args="1 0.6 0.6 20 20 1 1" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WING ACCENTS 1 node -->
    <NODE id="accentsCircle1">
      <MATERIAL id="whiteMaterial" />
      <TEXTURE id="black" />

      <TRANSLATION x="-3.35" y="0" z="0" />
      <ROTATION axis="y" angle="90" />

      <DESCENDANTS>
        <NODEREF id="accent1" />
        <NODEREF id="accent2" />
        <NODEREF id="accent3" />
        <NODEREF id="accent4" />
        <NODEREF id="accent5" />
        <NODEREF id="accent6" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's WING ACCENTS 2 node -->
    <NODE id="accentsCircle2">
      <MATERIAL id="whiteMaterial" />
      <TEXTURE id="black" />

      <TRANSLATION x="3.35" y="0" z="0" />
      <ROTATION axis="y" angle="-90" />

      <DESCENDANTS>
        <NODEREF id="accent1" />
        <NODEREF id="accent2" />
        <NODEREF id="accent3" />
        <NODEREF id="accent4" />
        <NODEREF id="accent5" />
        <NODEREF id="accent6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accent1">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <NODEREF id="accentFace1" />
        <NODEREF id="accentFace2" />
        <NODEREF id="accentFace3" />
        <NODEREF id="accentFace4" />
        <NODEREF id="accentFace5" />
        <NODEREF id="accentFace6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accent2">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="z" angle="60" />

      <DESCENDANTS>
        <NODEREF id="accentFace1" />
        <NODEREF id="accentFace2" />
        <NODEREF id="accentFace3" />
        <NODEREF id="accentFace4" />
        <NODEREF id="accentFace5" />
        <NODEREF id="accentFace6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accent3">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="z" angle="120" />

      <DESCENDANTS>
        <NODEREF id="accentFace1" />
        <NODEREF id="accentFace2" />
        <NODEREF id="accentFace3" />
        <NODEREF id="accentFace4" />
        <NODEREF id="accentFace5" />
        <NODEREF id="accentFace6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accent4">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="z" angle="180" />

      <DESCENDANTS>
        <NODEREF id="accentFace1" />
        <NODEREF id="accentFace2" />
        <NODEREF id="accentFace3" />
        <NODEREF id="accentFace4" />
        <NODEREF id="accentFace5" />
        <NODEREF id="accentFace6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accent5">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="z" angle="240" />

      <DESCENDANTS>
        <NODEREF id="accentFace1" />
        <NODEREF id="accentFace2" />
        <NODEREF id="accentFace3" />
        <NODEREF id="accentFace4" />
        <NODEREF id="accentFace5" />
        <NODEREF id="accentFace6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accent6">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="z" angle="300" />

      <DESCENDANTS>
        <NODEREF id="accentFace1" />
        <NODEREF id="accentFace2" />
        <NODEREF id="accentFace3" />
        <NODEREF id="accentFace4" />
        <NODEREF id="accentFace5" />
        <NODEREF id="accentFace6" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accentFace1"> <!-- Front face -->

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <LEAF id="tieFace" type="rectangle" args="0 0 0.3 3.45" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accentFace2"> <!-- Back face -->

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="-0.2" />

      <DESCENDANTS>
        <LEAF id="tieFace" type="rectangle" args="0 0 0.3 3.45" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accentFace3"> <!-- Left face -->

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="-0.2" />
      <ROTATION axis="y" angle="-90" />

      <DESCENDANTS>
        <LEAF id="tieFace" type="rectangle" args="0 0 0.3 3.45" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accentFace4"> <!-- Right face -->

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="y" angle="90" />

      <DESCENDANTS>
        <LEAF id="tieFace" type="rectangle" args="0 0 0.3 3.45" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accentFace5"> <!-- Top face -->

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="3.45" z="-0.2" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF id="tieFace" type="rectangle" args="0 0 0.3 0.3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="accentFace6"> <!-- Bottom face -->

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF id="tieFace" type="rectangle" args="0 0 0.3 0.3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="wingTriangle1">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <ROTATION axis="y" angle="0" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF id = "triangle1" type="triangle" args="0 0 0 1.7 0 3 -1.7 0 3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="wingTriangle2">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <ROTATION axis="y" angle="60" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  id = "triangle1" type="triangle" args="0 0 0 1.7 0 3 -1.7 0 3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="wingTriangle3">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <ROTATION axis="y" angle="120" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  id = "triangle1" type="triangle" args="0 0 0 1.7 0 3 -1.7 0 3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="wingTriangle4">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <ROTATION axis="y" angle="180" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  id = "triangle1" type="triangle" args="0 0 0 1.7 0 3 -1.7 0 3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="wingTriangle5">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <ROTATION axis="y" angle="240" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  id = "triangle1" type="triangle" args="0 0 0 1.7 0 3 -1.7 0 3" />
      </DESCENDANTS>

    </NODE>

    <NODE id="wingTriangle6">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="0" z="0" />
      <ROTATION axis="y" angle="-60" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  id = "triangle1" type="triangle" args="0 0 0 1.7 0 3 -1.7 0 3" />
      </DESCENDANTS>

    </NODE>

    <!-- Tie fighter's CONNECTIONS node -->
    <NODE id="connections">
      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <DESCENDANTS>

        <NODEREF id="tieCone1" />
        <NODEREF id="tieCone2" />

      </DESCENDANTS>
    </NODE>

    <!-- LEFT tie fighter CONNECTOR -->
    <NODE id="tieCone1">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="-0.5" y="0" z="0" />
      <ROTATION axis="y" angle="-90" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="cylinder" args="3 1 0.1 20 20" />
      </DESCENDANTS>

    </NODE>

    <!-- RIGHT tie fighter CONNECTOR -->
    <NODE id="tieCone2">

      <MATERIAL id="defaultMaterial" />
      <TEXTURE id="null" />

      <TRANSLATION x="0.5" y="0" z="0" />
      <ROTATION axis="y" angle="90" />
      <SCALE sx="1" sy="1" sz="1" />

      <DESCENDANTS>
        <LEAF  type="cylinder" args="3 1 0.1 20 20" />
      </DESCENDANTS>

    </NODE>



    <NODE id="planet">

      <MATERIAL id="planetMaterial" />
      <TEXTURE id="planetTex" />

      <TRANSLATION x="15" y="10" z="-20" />
      <SCALE sx="4" sy="4" sz="4" />

      <DESCENDANTS>
        <LEAF  type="sphere" args="2 20 20" />
      </DESCENDANTS>

    </NODE>

</NODES>
